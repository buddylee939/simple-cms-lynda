<!DOCTYPE html>
<html>
  <head>
    <title>Simple CMS: <%= @page_title || 'Admin Area' %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'admin', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'admin', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="header">
      <h1>Simple CMS Admin</h1>
    </div>
    <div id="main">
      <div id="content">

      <% if !flash[:notice].blank? %>
        <div class="notice">
          <%= flash[:notice] %>
        </div>
      <% end %>     

        <%= yield %>
        
      </div>       
    </div>
    <div id="footer">
      <p id="copyright">&copy; lynda.com</p>
    </div>
  </body>
</html>

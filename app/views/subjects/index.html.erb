<% @page_title = "All Subjects" %>

<div class="subjects index">
	<h2>Subjects</h2>
	<%= link_to('<< Back to Menu', admin_path, class: 'back-link') %> | 
	<%= link_to("Add New Subject", new_subject_path, class: 'action new') %>
	<table class="listing table table-striped" summary="Subject list">
		<tr class="header">
			<th>#</th>
			<th>Subject</th>
			<th>Visible</th>
			<th>Pages</th>
			<th>Actions</th>
		</tr>
		<% @subjects.each do |subject| %>
			<tr>
				<td><%= subject.position %></td>
				<td><%= subject.name %></td>
				<td class="center"><%= status_tag(subject.visible) %></td>
				<td class="center"><%= subject.pages.size %></td>
				<td class="actions">
					<%= link_to('View Pages', pages_path(subject_id: subject.id), class: 'btn btn-default btn-sm') %>
					<%= link_to('Show', subject_path(subject), class: 'action btn btn-primary btn-sm') %>
					<%= link_to('Edit', edit_subject_path(subject), class: 'action edit btn btn-success btn-sm') %>
					<%= link_to('Delete', delete_subject_path(subject), class: 'action delete  btn btn-danger btn-sm') %>
				</td>
			</tr>
		<% end %>
	</table>
</div>
